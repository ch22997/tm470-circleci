<h1>Listing Widgets</h1>
<%= link_to 'New widget', new_widget_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Purpose</th>
    <th>Size</th>
    <th>ID</th>
    <th colspan="2"></th>
  </tr>

  <% @widgets.each do | widget | %>
    <tr>
      <td><%= widget.name %></td>
      <td><%= widget.purpose %></td>
      <td><%= widget.size %></td>
      <td><%= widget.id %></td>
      <td><%= link_to 'Show', widget_path(widget) %></td>
  </tr>
  <% end %>
</table>